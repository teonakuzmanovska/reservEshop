@model EShop.Domain.DomainModels.Product

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Product details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color:lightcoral">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2" style="color:lightcoral">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.ProductImage)*@
            <img src="@Model.ProductImage" style="width: 100px" />
        </dd>
        <dt class = "col-sm-2" style="color:lightcoral">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class = "col-sm-2" style="color:lightcoral">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a  href="/ShoppingCart">Back to Shopping Cart</a>
</div>
