@model IEnumerable<EShop.Domain.DomainModels.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@for (var i = 0; i < Model.ToList().Count; i++)
{
    var item = Model.ToList()[i];

    if (i % 3 == 0)
    {
        @:<div class="row">
        }

        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@item.ProductImage" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.ProductDescription</p>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a href="/Products/AddToCart?productId=@item.Id" class="btn btn-primary">Add To Cart</a>
            </div>
        </div>

        if (i % 3 == 2)
        {
        @:</div>
    }
}
