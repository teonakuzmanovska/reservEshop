@{
}
@model EShopAdminApp.Models.Order

@for (var i = 0; i < Model.Products.ToList().Count; i++)
{
    var item = Model.Products[i].Product; // Model.Products == Order.Products

    if (i % 3 == 0)
    {
        @:<div class="row">
        }

        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@item.ProductImage" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.ProductDescription</p>
            </div>
        </div>

        if (i % 3 == 2)
        {
        @:</div>
    }
}